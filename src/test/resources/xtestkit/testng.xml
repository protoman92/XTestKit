<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="XTestKit"
       parallel="classes"
       thread-count="100"
       data-provider-thread-count="100">

    <test name="Test Kit Test">
        <classes>
            <class name="org.swiften.xtestkit.kit.MockTestKitTest"/>
        </classes>
    </test>

    <test name="Base Engine Test">
        <classes>
            <class name="org.swiften.xtestkit.base.BaseEngineTest"/>
            <class name="org.swiften.xtestkit.base.AppiumCommandTest"/>
            <class name="org.swiften.xtestkit.base.ProcessRunnerTest"/>
            <class name="org.swiften.xtestkit.base.ServerAddressTest"/>
        </classes>
    </test>

    <test name="Base Engine Action Test">
        <classes>
            <class name="org.swiften.xtestkit.base.element.action.BaseActionTest"/>
            <class name="org.swiften.xtestkit.base.element.action.BaseSwipeActionTest"/>
            <class name="org.swiften.xtestkit.base.element.action.SwipeRepeatTest"/>
            <class name="org.swiften.xtestkit.base.element.action.SwipeRepeatComparisonTest"/>
        </classes>
    </test>

    <test name="Base Engine Locator Test">
        <classes>
            <class name="org.swiften.xtestkit.base.element.locator.BaseLocatorTest"/>
            <class name="org.swiften.xtestkit.base.element.locator.XPathTest"/>
        </classes>
    </test>

    <test name="Android Test">
        <classes>
            <class name="org.swiften.xtestkit.mobile.android.MockAndroidEngineTest"/>
            <class name="org.swiften.xtestkit.mobile.android.MockADBHandlerTest"/>
        </classes>
    </test>

    <test name="iOS Test">
        <classes>
            <class name="org.swiften.xtestkit.mobile.ios.MockIOSEngineTest"/>
            <class name="org.swiften.xtestkit.mobile.ios.XCRunHandlerTest"/>
        </classes>
    </test>

    <test name="Network Handler Test">
        <classes>
            <class name="org.swiften.xtestkit.system.NetworkHandlerTest"/>
        </classes>
    </test>

    <test name="Repeat Runner Test">
        <classes>
            <class name="org.swiften.xtestkit.test.RepeatRunnerTest"/>
        </classes>
    </test>

    <test name="Util Test">
        <classes>
            <class name="org.swiften.xtestkit.util.ValueRangeTest"/>
        </classes>
    </test>

</suite>